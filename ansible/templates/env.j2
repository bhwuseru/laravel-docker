NODEJS_VERSION="{{ nodejs_version }}"
LARAVEL_VERSION="{{ laravel_version }}"
PROJECT_NAME="{{ project_name }}"
COMPOSE_PROJECT_NAME="{{ project_name }}"
PROJECT_ROOT="{{ lookup('pipe', 'pwd') }}"
PROJECT_NAME_DIR_PATH="{{ lookup('pipe', 'pwd') }}/docker"
VOLUME_PATH="{{ lookup('pipe', 'pwd') }}/docker/php/html"

APP_NAME="{{ project_name }}"
DB_USER="{{ db_user }}"
DB_PASSWORD="{{ db_password }}"
USER="{{ db_user }}"

MEMORY_LIMIT="{{ memory_limit }}"
UPLOAD_LIMIT="{{ upload_limit }}"

PROXY_TEMPLATE_NAME="{{ proxy_template_name | default('default.conf.templateForSSL') }}"
PHP_MYADMIN_PUBLIC_PORT={{ php_myadmin_port }}
PROXY_PUBLIC_PORT={{ proxy_port }}
PROXY_SSL_PORT={{ ssl_port }}
PHP_SERVE_PORT={{ php_serve_port }}
PHP_VITE_PORT={{ php_vite_port }}
REACT_PORT={{ react_port }}
MAILHOG_PORT={{ mailhog_port }}
WEBSOCKET_PORT={{ websocket_port }}

NODE_PORT={{ node_port }}
PHP_SUBDOMAIN="{{ php_subdomain | quote }}"
NODE_SUBDOMAIN="{{ node_subdomain | quote }}"
WS_SUBDOMAIN="{{ ws_subdomain | quote }}"

HOSTNAME="{{ hostname }}"
HOST_IP="{{host_ip}}"
